
<% if(laptops.length > 0) { %>
    <% laptops.forEach((laptop) => {  %>
        <div class="product_specifications" aria-label="ordinateurs portables">
            <h3><%= laptop.title %></h3>
            <a href="laptop/<%= laptop._id %>" class="img_wrapper" tabindex="-1"><img src="../images/laptops/<%= laptop.image %>" alt="thinkPad gen 1 image" tabindex="0"></a>
            <ul>
                <% laptop.description.forEach( element => { %>
                        <li> <%= element %> </li>
                <% }); %>
            </ul>
            <div class="toggle_btn" role="button" tabindex="0">
                <span class="toggle_text">Afficher les spécifications complètes</span>
                <span><i class="fa-solid fa-angle-down"></i></span>
            </div>
            <div class="more-details-link-wrapper">
                <a class= "more-details-link" href="/laptop/<%= laptop._id %>">En Savoir Plus</a>
            </div>
            <div> <%= laptop.price %>,00 €</div>
            <div>Code de réduction: SPRING</div>
            <div class="button addToCart">
                <button>Ajouter Au Panier</button>
            </div>
        </div>
    <% }) %>
<% } else {%>
    <p>Les ordinateurs portables serons disponibles prochainement</p>
<% } %>

