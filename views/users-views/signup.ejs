<%- include('../includes/_header') -%>
<section class="form">
    <div class="userform signup_section_mobile">
    <div>
        <h2>S'inscrire</h2>
        <p>* Signale un champ obligatoire</p>
        <form action="/signup" class="signupForm">
            <div>
                <label for="user_lname">Nom<span>*</span></label>
                <input id="user_lname" type="text" name="lname" placeholder="entrez votre nom" minlength="1" maxlength="20" aria-label="champs obligatoire" required>
            </div>
            <div>
                <label for="user_fname">Prénom<span>*</span></label>
                <input id="user_fname" type="text" name="fname" minlength="1" maxlength="20" aria-label="champs obligatoire" required>
            </div>
            <div>
                <label for="birthday"><i class="fa-solid fa-cake-candles"></i> Date de naissance</label>
                <input id="birthday" type="date" name="birthday" value="2023-04-06">
            </div>
            <div>
                <label for="user_email"><i class="fa-solid fa-envelope"></i> Email<span>*</span></label>
                <input type="email" placeholder="Entrez votre Email" name="email" id="user_email" aria-label="champs obligatoire" required>
            </div>

            <div class="emailError"></div>
            <div>
                <label for="user_psw"><i class="fa-solid fa-lock"></i> Mots de passe<span>*</span></label>
                <input type="password" placeholder="Mots de passe" name="password" id="user_psw" minlength="8" maxlength="20" aria-label="champs obligatoire" required>
            </div>
            <div class="passwordError"></div>
            <!-- <div>
                <label for="psw">Confirmer</label>
                <input type="password" name="psw-repeat" id="psw-repeat">
            </div>

            <div class="ConfirmPswError"></div>-->
            <div>
                <label for="adr"><i class="fa fa-address-card-o"></i>Address</label>
                <input type="text" id="adr" name="adress" placeholder="ex: voie, rue">
            </div>
            <div>
                <label for="phone"><i class="fa-solid fa-phone-volume"></i> Numéro de téléphone</label>
                <input type="tel" id="phone" name="phoneNumber">
            </div>
            <div>
                <label for="zip">Code postale</label>
                <input type="number" id="zip" name="zipCode" placeholder="78000">
            </div>
            <div>
                <label for="city"><i class="fa fa-institution"></i> Ville</label>
                <input type="text" id="city" name="city" minlength="2" maxlength="20">
            </div>
            <div>
                <label for="country"><i class="fa-solid fa-flag"></i> Pays</label>
                <input type="text" id="country" name="country" minlength="2" maxlength="50">
            </div>
            <div>
                <input type="checkbox" name="checkbox" id="checkbox" required>
                <label class="checkbox-label" for="checkbox">Vous acceptez les <a href="/privacy-terms">Conditions d'utilisation et Confidentialité</a>.<span>*</span></label>
            </div>
            <div class="button">
                <button type="submit" name="submit">Créer</button>
            </div>
        </form>
        <p>Si vous avez déja un compte?<a href="/login">Se connecter</a>.</p>
    </div>
    </div>
    </section>
    <script src="/js/signup.js" type="text/javascript"> </script>
<%- include('../includes/_footer') -%>


